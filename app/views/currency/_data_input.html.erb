<% time_frame = @time_frame.values %>
<% currency_list = @currency.keys.map{|i| i.upcase} %>

   
    
    <%= form_tag("/currency/view", id: "currency_form") do  -%>      
      <label> Time Frame: </label>
      <br />
      <%= select_tag :time_frame, options_for_select(time_frame), class: "btn btn-info dropdown-toggle" %>    
      <br />
      <br />
      <label> Currencies: </label>
      <br />
      <%= select_tag :currency, options_for_select(currency_list, "XAU_USD"), class: "btn btn-info dropdown-toggle" %>        
      <br />
      <br />
      <%= submit_tag "Save", class: "btn btn-primary", id: "submit_button" %>
      <br />
      <br />
    <% end %>   
